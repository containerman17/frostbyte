{
  "name": "frostbyte-sdk",
  "version": "2.0.0-rc.1",
  "description": "A high-performance blockchain indexer with TypeScript plugin support",
  "type": "module",
  "main": "index.ts",
  "types": "index.ts",
  "bin": {
    "frostbyte": "./cli.ts"
  },
  "files": [
    "*.ts",
    "lib/**/*.ts",
    "blockFetcher/**/*.ts",
    "standardPlugins/**/*.ts",
    "scripts/**/*.ts",
    "tsconfig.json",
    "!**/*.test.ts",
    "!**/*.spec.ts"
  ],
  "scripts": {
    "dev:start": "node --experimental-strip-types cli.ts run --plugins-dir ./examples/api,./examples/indexing --data-dir ./data",
    "dev:indexer": "ROLES=indexer npm run dev:start",
    "dev:api": "ROLES=api npm run dev:start",
    "dev:fetcher": "ROLES=fetcher npm run dev:start",
    "dev": "nodemon --watch plugins --watch data --exec \"npm run dev:start\"",
    "clean": "rm -rf data/*/p_*"
  },
  "keywords": [
    "blockchain",
    "indexer",
    "avalanche",
    "avax",
    "typescript"
  ],
  "author": "containerman17",
  "repository": {
    "type": "git",
    "url": "https://github.com/containerman17/frostbyte.git"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "exports": {
    ".": {
      "types": "./index.ts",
      "default": "./index.ts"
    }
  },
  "dependencies": {
    "@avalabs/avalanchejs": "^5.0.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/json-diff": "^1.0.3",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.0.0",
    "fastify": "^5.4.0",
    "json-diff": "^1.0.6",
    "lz4-napi": "^2.9.0",
    "msgpackr": "^1.11.5",
    "p-queue": "^8.1.0",
    "pino-pretty": "^13.0.0",
    "piscina": "^5.1.3",
    "typescript": "^5.8.3",
    "viem": "^2.31.7",
    "yargs": "^17.7.2",
    "zod": "^3.25.74",
    "zstd-napi": "^0.0.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.10",
    "@types/yargs": "^17.0.33",
    "nodemon": "^3.1.10"
  }
}
